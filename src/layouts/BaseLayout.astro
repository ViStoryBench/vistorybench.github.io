---
// src/layouts/BaseLayout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css'; 
import { buildAssetPath } from '../utils/path';
import { translations } from '../data/translations';

export interface Props {
	title?: string; // Passed to Header
    activeNav?: string; // Passed to Header to highlight the current page
    assetBase?: string;
    // Add other props that all pages might need from the layout
}

const { 
    title, // This will be the specific page title from the page frontmatter
    activeNav,
    assetBase = '.',
} = Astro.props;

const resolvedAssetBase = assetBase && assetBase.length > 0 ? assetBase : '.';
const mainJsPathWithBase = buildAssetPath(resolvedAssetBase, 'js/main.js');
const faviconPathWithBase = buildAssetPath(resolvedAssetBase, 'favicon.png');
const mainScriptTag = `<script src="${mainJsPathWithBase}"></script>`;
---
<!DOCTYPE html>
<html lang="en"> {/* The lang attribute will be dynamically set by main.js */}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/svg+xml" href={faviconPathWithBase} />
    <meta name="generator" content={Astro.generator} />
    {/* The document title is now primarily set by the Header component via its prop or default */}
    {/* We can still have a fallback here or let the Header handle it exclusively */}
    <title>{title || 'Storytelling Benchmark'}</title> 
</head>
<body class="bg-white dark:bg-slate-900 text-gray-800 dark:text-slate-200 font-sans flex flex-col min-h-screen transition-colors duration-300 ease-in-out">
    <Header title={title} activeNav={activeNav} assetBase={resolvedAssetBase} />
    <main class="flex-grow">
        <slot /> {/* Page content will be injected here */}
    </main>
    <Footer />
    <script define:vars={{ initialTranslations: translations }}>
      window.translations = initialTranslations;
    </script>
    <Fragment set:html={mainScriptTag} />
</body>
</html>

<style is:global>

  @tailwind base;
  @tailwind components;
  @tailwind utilities;

</style> 
