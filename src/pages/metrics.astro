---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getAssetBase, buildAssetPath } from '../utils/path';
import mathJaxScript from '../data/tex-mml-chtml.js?url';

const pageTitle = "Evaluation Metrics Suite";
const activeNav = "metrics";
const assetBase = getAssetBase(Astro.url.pathname);
const mathJaxFontURL = buildAssetPath(assetBase, 'mathjax/fonts/woff-v2');
const mathJaxScriptURL = mathJaxScript.startsWith('/')
  ? buildAssetPath(assetBase, mathJaxScript.slice(1))
  : buildAssetPath(assetBase, mathJaxScript);
const mathJaxInlineConfig = `
  window.MathJax = {
    tex: {
      inlineMath: [['$', '$'], ['\\\\(', '\\\\)']],
      displayMath: [['$$', '$$'], ['\\\\[', '\\\\]']],
      processEscapes: true,
    },
    chtml: {
      fontURL: ${JSON.stringify(mathJaxFontURL)},
    },
    svg: {
      fontCache: 'global'
    }
  };
`;
---

<BaseLayout title={pageTitle} activeNav={activeNav} assetBase={assetBase}>
  <main class="bg-slate-50 dark:bg-slate-950 text-slate-800 dark:text-slate-200 py-16 px-4 font-sans">
    <div class="container mx-auto max-w-7xl">

      <!-- Header Section -->
      <header class="mb-16 text-center max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font font-bold text-slate-900 dark:text-slate-50 mb-6">
          ViStoryBench Evaluation Metrics
        </h1>
        <p class="text-lg text-slate-600 dark:text-slate-400 leading-relaxed">
          A comprehensive suite of automated and human-verified metrics designed to evaluate story visualization models across diverse narrative structures, visual styles, and character settings.
        </p>
      </header>

